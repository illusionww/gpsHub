<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="15dp">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="83dp">
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="222dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ID компании"
                android:id="@+id/textView2" android:paddingBottom="4dp"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/company_hash"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ID водителя"
                android:id="@+id/textView" android:paddingTop="5dp" android:paddingBottom="4dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/driver_id"/>
        <Button
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:text="Войти"
                android:id="@+id/login" android:layout_gravity="right" android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="если у вас нет id, нажмите"
                android:id="@+id/textView3" />
        <TextView
                android:layout_width="179dp"
                android:layout_height="31dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="зарегистрироваться"
                android:id="@+id/signuplink"
                android:textColor="#606cff" android:textIsSelectable="false"/>
    </LinearLayout>
</LinearLayout>